<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{MM/dd/yyyy HH:mm:ss.SSS} %magenta([%thread]) %highlight(%-5level) %logger{20}.%M:%line | %msg%n
            </pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>